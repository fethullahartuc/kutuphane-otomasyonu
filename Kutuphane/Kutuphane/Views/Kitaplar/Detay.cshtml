

@model Kutuphane_Otomasyonu.Model.Kitaplar


@{
    ViewBag.Title = "Detay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                <b>@Html.DisplayFor(x => x.Id) nolu Kitap Bilgileri</b>  
            </div>
            <div class="ibox-body">
                <div class="form-group">
                    <b>Kitap Türü :</b>
                    @Html.DisplayFor(x => x.KitapTurleri.KitapTuru)
                </div>
                <div class="form-group">
                    <b>Barkod No :</b>
                    @Html.DisplayFor(x => x.BarkodNo)
                </div>
                <div class="form-group">
                    <b>Kitap Adı :</b>
                    @Html.DisplayFor(x => x.KitapAdi)
                </div>
                <div class="form-group">
                    <b>Yazar Adı :</b>
                    @Html.DisplayFor(x => x.Yazarlar.YazarAdi)
                </div>
                <div class="form-group">
                    <b>Yayın Evi :</b>
                    @Html.DisplayFor(x => x.YayinEvi)
                </div>
                <div class="form-group">
                    <b>Sayfa Sayısı :</b>
                    @Html.DisplayFor(x => x.SayfaSayisi)
                </div>
                <div class="form-group">
                    <b>Eklenme Tarihi :</b>
                    @Html.DisplayFor(x => x.EklenmeTarihi)
                </div>
                <div class="form-group">
                    <b>Güncellenme Tarihi :</b>
                    @Html.DisplayFor(x => x.GuncellenmeTarihi)
                </div>
                <div class="form-group">
                    @Html.ActionLink(" Kitap Listesine Geri Dön", "/Index", null, new { @class = "btn btn-info fa fa-arrow-left " })
                </div>
            </div>
        </div>
    </div>
</div>
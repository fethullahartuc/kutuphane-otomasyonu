
@model Kutuphane_Otomasyonu.Model.Kitaplar

@{
    ViewBag.Title = "Duzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">

    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                <h2>Kitap Düzenle</h2>
            </div>
            <div class="ibox-body">

                @using (Html.BeginForm("Duzenle", "Kitaplar", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <b>Kitap Türü :</b>
                        @Html.DropDownListFor(x => x.KitapTuruId, (SelectList)ViewBag.KitapListe, "-Tür Seçiniz-", new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.KitapTuruId, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <b>Barkod No :</b>
                        @Html.TextBoxFor(x => x.BarkodNo, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.BarkodNo, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <b>Kitap Adı :</b>
                        @Html.TextBoxFor(x => x.KitapAdi, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.KitapAdi, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <b>Yazar Adı :</b>
                        @Html.DropDownListFor(x => x.YazarId, (SelectList)ViewBag.YazarListe, "-Yazar Seçiniz-", new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.YazarId, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <b>Yayın Evi :</b>
                        @Html.TextBoxFor(x => x.YayinEvi, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.YayinEvi, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <b>Sayfa Sayısı :</b>
                        @Html.TextBoxFor(x => x.SayfaSayisi, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.SayfaSayisi, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <b>Eklenme Tarihi :</b>
                        @Html.TextBoxFor(x => x.EklenmeTarihi, new { @class = "form-control", type = "datetime-local", Value = Model.EklenmeTarihi.ToString("yyyy-MM-dd HH:mm") })
                        @Html.ValidationMessageFor(x => x.EklenmeTarihi, "", new { @class = "text-danger"})
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success"><i class="fa fa-edit"></i>&nbsp;Düzenle</button>
                        @Html.ActionLink(" Kitap Listesine Geri Dön", "/Index", null, new { @class = "btn btn-info fa fa-arrow-left" })
                    </div>
                }



            </div>
        </div>
    </div>


</div>


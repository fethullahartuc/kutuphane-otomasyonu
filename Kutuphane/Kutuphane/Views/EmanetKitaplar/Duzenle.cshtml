
@model Kutuphane_Otomasyonu.Model.EmanetKitaplar

@{
    ViewBag.Title = "Duzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">

    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                <h2>Emanet Kitap Düzenleme Sayfası</h2>
            </div>
            <div class="ibox-body">

                @using (Html.BeginForm("Duzenle", "EmanetKitaplar", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @*@Html.ValidationSummary(false, "", new { @class = "text-danger" })*@

                    <div class="form-group">
                        <b>Üye Adı Soyadı :</b>
                        @Html.DropDownListFor(x => x.UyeId, (SelectList)ViewBag.UyeListe, "-Üye Seçiniz-", new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.UyeId, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <b>Kitap Adı :</b>
                        @Html.DropDownListFor(x => x.KitapId, (SelectList)ViewBag.KitapListe, "-Kitap Seçiniz-", new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.KitapId, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <b>Kitap Aldığı Tarih :</b>
                        @Html.TextBoxFor(x => x.KitapAldigiTarihi, new { @class = "form-control", type = "datetime-local",Value=Model.KitapAldigiTarihi.ToString("yyyy-MM-dd HH:mm") })
                        @Html.ValidationMessageFor(x => x.KitapAldigiTarihi, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success"><i class="fa fa-plus"></i>&nbsp;Düzenle</button>
                        @Html.ActionLink(" Emanet Kitap Listesine Geri Dön", "/Index", null, new { @class = "btn btn-info fa fa-arrow-left " })
                    </div>


                }



            </div>
        </div>
    </div>


</div>

